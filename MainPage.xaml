<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelessApp.MainPage"
             BackgroundColor="#363737">


    <HorizontalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <!--ionicons ttf file added to fonts folder and initialized in mauiprogram.cs-->
        <Image
            Source="{FontImage &#xf214;, FontFamily=Ionicons, Size=900, Color=white}"
            HeightRequest="80"
            WidthRequest="80"
            Rotation="45"
            Margin="15"
            />

        <Label
            Text= "Welcome to Traveless!"
            VerticalOptions="Center"
            FontSize="60"/>
    </HorizontalStackLayout>

</ContentPage>
